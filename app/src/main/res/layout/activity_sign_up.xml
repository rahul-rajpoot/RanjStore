<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.alps.ranjstore.views.SignUpActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/shape2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_marginLeft"
        android:layout_marginTop="@dimen/layout_marginTop"
        android:layout_marginRight="@dimen/layout_marginRight"
        android:layout_marginBottom="20dp"
        android:elevation="50dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="234dp"
            android:orientation="vertical"
            android:padding="28dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sponsor Details"
                android:textAlignment="center"
                android:textColor="@color/text_colors"
                android:textSize="@dimen/front_title"

                android:textStyle="bold" />


            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:alpha="0.7"
                android:textStyle="bold"/>
-->
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_edit"
                android:drawableLeft="@drawable/baseline_person_search_24"
                android:drawablePadding="10dp"
                android:hint="Sponsor Username"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:singleLine="true" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <!--  <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Password"
                  android:alpha="0.7"
                  android:textStyle="bold"/>
  -->
            <EditText
                android:id="@+id/passs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_edit"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:hint="Sponsor Name"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:singleLine="true" />


            <View
                android:layout_width="wrap_content"
                android:layout_height="25dp" />

            <!--  <com.google.android.material.button.MaterialButton
                android:id="@+id/sumbit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#0f7abf"
                android:textAllCaps="false"
                android:text="SUBMIT"
                android:textSize="@dimen/button_Size"

                app:cornerRadius="32dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/move_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.7"
                android:text="Already Have an Account"
                android:textColor="@color/text_colors" />
-->

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="@dimen/layout_marginLeft"
        android:layout_marginTop="450dp"
        android:layout_marginRight="@dimen/layout_marginRight"
        android:layout_marginBottom="20dp"
        android:elevation="500dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"


            android:paddingTop="10dp">



            <Button
                android:id="@+id/sumbit"
                android:layout_width="50dp"

                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:backgroundTint="#0f7abf"
                android:text="SUBMIT "
                android:textColor="@color/white"
                android:textSize="19sp" />

            <Button
                android:id="@+id/textViewRegister2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:backgroundTint="#0f7abf"
                android:text="RESET"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/textViewRegister"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:backgroundTint="#0f7abf"
                android:text="CANCEL "
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>
</ScrollView>
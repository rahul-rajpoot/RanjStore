    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context="com.alps.ranjstore.activities.SignUpActivity">
        <ImageButton
            android:id="@+id/backbton"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:elevation="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/baseline_arrow_back_ios_new_24"
            />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentStart="true"

            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/shape2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:layout_marginBottom="20dp"
            android:elevation="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="234dp"
                android:orientation="vertical"
                android:padding="28dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sponsor Details"
                    android:textAlignment="center"
                    android:textColor="@color/text_colors"
                    android:textSize="@dimen/front_title"

                    android:textStyle="bold" />


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />
                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:alpha="0.7"
                    android:textStyle="bold"/>
    -->
                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_edit"
                    android:drawableLeft="@drawable/baseline_person_search_24"
                    android:drawablePadding="10dp"
                    android:hint="Sponsor Username"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:singleLine="true" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
                <!--  <TextView

                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Password"
                      android:alpha="0.7"
                      android:textStyle="bold"/>
      -->
                <EditText
                    android:id="@+id/passs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_edit"
                    android:drawableLeft="@drawable/ic_person"
                    android:drawablePadding="10dp"
                    android:hint="Sponsor Name"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:singleLine="true" />


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="25dp" />

                <!--  <com.google.android.material.button.MaterialButton
